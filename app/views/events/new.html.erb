<div class='container'>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> error-top">
      <%= value %>
    </div>
  <% end %>
  <h2> Post a New Pulsd Event </h2>
  <h4> On Twitter, On Instagram, and On Facebook All at Once</h4>
<br>
  <div class="event-form">
    <%= simple_form_for(@event, class: "form-control") do |f| %>
      <%= f.input :title, placeholder: "Awesome event", input_html: { class: "form-control" } %>
      <%= f.input :date, placeholder: "mm-dd-yyyy", input_html: { class: "form-control" } %>
      <%= f.input :address, input_html: { class: "form-control" } %>
      <%= f.input :description, input_html: { class: "form-control" } %><br>
      <%= f.button :submit, class: "btn btn-default"%>
    <%end%>
  </div>

</div>
